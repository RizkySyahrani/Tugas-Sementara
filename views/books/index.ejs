    <!-- My Book Review -->
  <section id="Reviews">
    <div class="container">
      <div class="row text-center mb-4">
        <div class="col">
          <h2>My Book Review</h2>
        </div>
      </div>
      <div class="row">
        <% books.forEach(book => { %>
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text">by <%= book.author %></p>
                <p class="card-text"><%= book.review %></p>
                <a href="/books/<%= book.id %>/edit" class="btn btn-primary">Edit</a>
                <form action="/books/<%= book.id %>?_method=DELETE" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
      <path
        fill="#ffffff"
        fill-opacity="1"
        d="M0,256L30,240C60,224,120,192,180,170.7C240,149,300,139,360,160C420,181,480,235,540,240C600,245,660,203,720,176C780,149,840,139,900,149.3C960,160,1020,192,1080,176C1140,160,1200,96,1260,85.3C1320,75,1380,117,1410,138.7L1440,160L1440,320L1410,320C1380,320,1320,320,1260,320C1200,320,1140,320,1080,320C1020,320,960,320,900,320C840,320,780,320,720,320C660,320,600,320,540,320C480,320,420,320,360,320C300,320,240,320,180,320C120,320,60,320,30,320L0,320Z"
      ></path>
    </svg>
  </section>
  <!-- My Book Review -->

  <!-- Contact -->
  <section id="Contact">
    <div class="container">
      <div class="row text-center mb-4">
        <div class="col">
          <h2>Contact For Further Information</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <form>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" />
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Password</label>
              <input type="password" class="form-control" id="exampleInputPassword1" />
            </div>
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="exampleCheck1" />
              <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>
  <!-- End contact -->
